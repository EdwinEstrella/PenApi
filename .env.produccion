# ===========================================
# PenApi - Environment Configuration
# Production Environment
# ===========================================

# Server Configuration
SERVER_NAME=PenApi
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=https://$(PRIMARY_DOMAIN)

# Authentication (IMPORTANT: Change these values!)
AUTHENTICATION_API_KEY=CHANGE_THIS_IN_PRODUCTION_SUPER_SECRET_KEY
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_SUPER_LONG_AND_RANDOM_JWT_SECRET_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=7d

# Database Configuration (IMPORTANT: Use real production database)
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI='postgresql://username:password@your-db-host:5432/penapi_prod?schema=public'

# CORS Configuration (Restrict in production)
CORS_ORIGIN=https://$(PRIMARY_DOMAIN)
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Logging Configuration (Less verbose in production)
LOG_LEVEL=ERROR,WARN,INFO
LOG_COLOR=false
LOG_BAILEYS=warn

# Data Storage
DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_SAVE_DATA_LABELS=true
DATABASE_SAVE_DATA_HISTORIC=true

# Cache Configuration (Enable Redis in production)
REDIS_ENABLED=true
REDIS_URI=redis://your-redis-host:6379

# Webhook Configuration
WEBHOOK_GLOBAL=https://$(PRIMARY_DOMAIN)/webhook
WEBHOOK_GLOBAL_ENABLED=true

# Session Management (Longer in production)
DEL_INSTANCE=30m

# Environment
NODE_ENV=production
DOCKER_ENV=true

# Production Tools
TELEMETRY_ENABLED=false
PROMETHEUS_METRICS=true
METRICS_AUTH_REQUIRED=true
METRICS_USER=prometheus
METRICS_PASSWORD=CHANGE_THIS_METRICS_PASSWORD

# Event Emitter
EVENT_EMITTER_MAX_LISTENERS=100

# Security Headers (Additional security)
SSL_CONF_PRIVKEY=/path/to/your/cert.key
SSL_CONF_FULLCHAIN=/path/to/your/cert.crt

# Monitoring (Optional - Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Proxy Configuration (If needed)
# PROXY_HOST=your-proxy.com
# PROXY_PORT=8080
# PROXY_PROTOCOL=http

# Audio Converter API (Optional)
# API_AUDIO_CONVERTER=https://your-audio-converter.com
# API_AUDIO_CONVERTER_KEY=your-converter-api-key